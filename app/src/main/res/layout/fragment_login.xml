<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.expescape.ui.auth.AuthViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".ui.auth.fragments.Login">

        <include
            android:id="@+id/appbar_login"
            layout="@layout/appbar_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/login_email_textfield"
            android:layout_width="343dp"
            android:layout_height="56dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rectangular_fields"
            android:fontFamily="@font/inter"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textColor="@color/design_default_color_on_secondary"
            android:textColorHint="@color/colorControlNormal"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/login_password_textfield"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/login_password_textfield"
            android:layout_width="343dp"
            android:layout_height="56dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/rectangular_fields"
            android:fontFamily="@font/inter"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="@color/design_default_color_on_secondary"
            android:textColorHint="@color/colorControlNormal"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/login_btn"
            app:layout_constraintEnd_toEndOf="@+id/login_btn"
            app:layout_constraintStart_toStartOf="@+id/login_btn" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="341dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/poppins_bold"
            android:text="Login"
            android:textColor="@color/colorOnPrimary"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="or with"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/loginGoogle"
            app:layout_constraintEnd_toEndOf="@+id/loginGoogle"
            app:layout_constraintStart_toStartOf="@+id/loginGoogle" />

        <ImageButton
            android:id="@+id/loginGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="100dp"
            android:backgroundTint="@color/colorOnSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/loginwithgoogle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>